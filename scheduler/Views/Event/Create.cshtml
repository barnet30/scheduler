@model scheduler.ViewModels.EventModel

<h2>Создать событие</h2>


<form asp-action="Create" asp-controller="Event" asp-anti-forgery="true" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Title">Введите название</label>
            <input type="text" asp-for="Title" />
            <span asp-validation-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="Nickname">Введите Никнейм</label>
            <input type="text" asp-for="Nickname" />
            <span asp-validation-for="Nickname" />
        </div>
        <div class="form-group">
            <label asp-for="EventDate">Введите дату проведения</label>
            <input type="date" asp-for="EventDate" />
            <span asp-validation-for="EventDate" />
        </div>
        <div class="form-group">
            <label asp-for="BeginTime">Введите время начала</label>
            <input type="time" asp-for="BeginTime" />
            <span asp-validation-for="BeginTime" />
        </div>
        <div class="form-group">
            <label asp-for="EndTime">Введите время конца</label>
            <input type="time" asp-for="EndTime" />
            <span asp-validation-for="EndTime" />
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-dark" />
        </div>
    </div>
</form> 